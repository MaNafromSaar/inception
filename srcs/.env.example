# ============================================================================
# INCEPTION PROJECT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# For evaluation: credentials will be provided in credentials.txt
# ============================================================================

# Domain Name Configuration
DOMAIN_NAME=yourlogin.42.fr

# --- MariaDB Credentials ---
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wp_user
MYSQL_PASSWORD=your_database_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here

# --- WordPress Configuration ---
WP_DB_HOST=mariadb
WP_DB_NAME=${MYSQL_DATABASE}
WP_DB_USER=${MYSQL_USER}
WP_DB_PASSWORD=${MYSQL_PASSWORD}

# --- WordPress Salts ---
# Generate from: https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY='put your unique phrase here'
SECURE_AUTH_KEY='put your unique phrase here'
LOGGED_IN_KEY='put your unique phrase here'
NONCE_KEY='put your unique phrase here'
AUTH_SALT='put your unique phrase here'
SECURE_AUTH_SALT='put your unique phrase here'
LOGGED_IN_SALT='put your unique phrase here'
NONCE_SALT='put your unique phrase here'

# --- WordPress Site Details ---
WP_SITE_URL=https://${DOMAIN_NAME}
WP_SITE_TITLE="Inception Project"

# --- WordPress Admin User ---
# WARNING: Admin username must NOT contain 'admin' or 'administrator'
WP_ADMIN_USER=your_admin_username
WP_ADMIN_PASSWORD=your_admin_password
WP_ADMIN_EMAIL=admin@example.com

# --- WordPress Second User ---
WP_USER_USER=your_regular_username
WP_USER_PASSWORD=your_user_password
WP_USER_EMAIL=user@example.com

# --- FTP Configuration ---
FTP_USER=ftpuser
FTP_PASS=your_ftp_password

# --- Redis Configuration ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
